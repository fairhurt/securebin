{
  "name": "secureBin",
  "description" : "Securely encrypt your text on Pastebin.com",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo48.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "clipboardWrite"
  ],
  "optional_permissions": [
    "<all_urls>"
  ]
}
